extends ../layout

block content
	h1.
		#{title}
	form#formAgregarPersona(name="agregarPersona", method= "post",action="/personas/guardar")
		p Nombre:
				input#inputNombre(type="text", placeholder="Ejem. Ricardo", name="nombre")
		p Apellido:
				input#inputApellido(type="text", placeholder="Ejem. Torrez", name="apellido")
		p Telefono:
				input#inputTelefono(type="text", placeholder="Ejem. Ricardo", name="telefono")
		p Email:
				input#inputEmail(type="text", placeholder="Ejem. Ricardo.1@.com", name="email")
		p FechaNac:
				input#inputFechaNac(type="date", placeholder="Ejem. Fecha Nac", name="fecha_nac")
		p
			button#btnEnviar(type="submit") Guardar